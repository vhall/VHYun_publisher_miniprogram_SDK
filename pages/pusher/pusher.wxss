.live-pusher {
  height: 100vw;
  width: 56.25vw;
  margin: 0 auto;
}
.box {
  width: 100vw;
  height: 100vw;
  background-color: black;
}
.player-switch-box {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.player-switch-box button {
  margin-top: 10px;
  width: 33%;
}
.sliderbox {
  margin-top: 20px;
  padding-left: 20px;
}
.body {
  position: relative;
}
.mark {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 75vw;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
}
